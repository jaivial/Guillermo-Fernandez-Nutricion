// Estado inicial
let formData = {
  nombre: "",
  apellido: "",
  email: "",
  servicio: "Nutrición Clínica",
  telefono: "",
  motivoConsulta: "",
};

interface FormState {
  submitting: boolean;
  success: string | null;
  error: string | null;
}

// Estado del formulario
let formState: FormState = {
  submitting: false,
  success: null,
  error: null,
};

// Procesar el formulario
if (Astro.request.method === "POST") {
  formState.submitting = true;

  try {
    const data = await Astro.request.formData();
    const result = await sendEmail(data);

    if (result.success) {
      formState.success = result.message;
      formState.error = null;
      // Resetear los datos del formulario
      formData = {
        nombre: "",
        apellido: "",
        email: "",
        servicio: "Nutrición Clínica",
        telefono: "",
        motivoConsulta: "",
      };
    } else {
      formState.success = null;
      formState.error = result.message;
    }
  } catch (error: any) {
    console.error("Error al procesar el formulario:", error);
    formState.success = null;
    formState.error = `Error al procesar el formulario: ${error.message}`;
  } finally {
    formState.submitting = false;
  }
}
