---
import react from '@astrojs/react';
import { Image } from 'astro:assets';
import Logo from '../assets/LogoNombre2.png';
import Arrow from '../assets/arrow.svg';
import ArrowRosa from '../assets/arrowrosa.svg';
---

<nav class="navbar">
		<div class="logo">
			<Image
				src={Logo}
				class='logonavbar'
				alt='Guillermo Fernández dietista nutricionista en Valencia'
			>

			</Image>
		</div>
		<div class='rightsidenavbar'>

			<div class="links">
				<a href="/">Inicio</a>
				<a href="/sobre-mi">Sobre mí</a>
			   
				<div class="dropdown">
					<span>Servicios</span>
					<Image src={Arrow} class='arrownegra' alt='Guillermo Fernández dietista nutricionista en Valencia'></Image>
					<Image src={ArrowRosa} class='arrowrosa' alt='Guillermo Fernández dietista nutricionista en Valencia'></Image>
					<div class="dropdown-content">
						<a href="/nutricion-deportiva">Nutrición Deportiva</a>
						<a href="/nutricion-clinica">Nutrición Clínica</a>
						<a href="/perdida-de-peso">Pérdida de Peso</a>
					</div>
				</div>
				<a href="/sobre-mi">Contacto</a>
			</div>
			<div class="appointment-button">Pide tu Cita</div>
		</div>
	</nav>
<style>

.navbar {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    height: 100px;
    background-color: white;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.25);
    z-index: 9;
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
}

.rightsidenavbar {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
	align-items: center;
    gap: 3rem;
    align-items: center;
	height: 100%;
	padding: 0;
}

.logo {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
	align-items: center;
	padding: 0;
	

}

.logo img {
    height: 75%;
	width: auto;
}

.links {
    display: flex;
    flex-direction: row;
    justify-content: center;
	align-items: center;
    gap: 3rem;
    box-sizing: border-box;
    font-family: "Montserrat";
	height: 100%;
}

.links a {
    position: relative;
    color: black;
    font-family: "Montserrat";
    font-size: 20px;
    font-weight: 700;

	text-decoration: none;
}

.links a:hover {
    color: #F37D73;
    text-decoration: none;
    /* Remove default underline */
}

.links a::after {
    content: "";
    display: block;
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 3px;
    /* Set the thickness of the underline */
    background-color: #F37D73;
    transform: scaleX(0);
    /* Initially hide the underline */
    transition: transform 0.4s ease;
    /* Add a smooth transition */
}

.links a:hover::after {
    transform: scaleX(1);
    /* Show the underline on hover */
}


.dropdown {
    position: relative;
    display: flex;
    flex-direction: row;
    gap: 8px;
	justify-content: center;
	align-items: center;
	height: 50%;
}

.dropdown img {
    transform: rotate(90deg);
    width: fit-content;
	height: 17px;
}

.arrowrosa {
    display: none;
}



.dropdown span {
    color: black;
    cursor: pointer;
    font-family: "Montserrat";
    font-size: 20px;
    font-weight: 700;
}

.dropdown:hover span {
    color: #F37D73;
    text-decoration: none;
	
    /* Remove default underline */
}

.dropdown span::after {
    content: "";
    display: block;
    position: absolute;
	
    bottom: 10px;
    left: 0;
    width: 100%;
    height: 3px;
    /* Set the thickness of the underline */
    background-color: #F37D73;
    transform: scaleX(0);
    /* Initially hide the underline */
    transition: transform 0.3s ease;
    /* Add a smooth transition */
}

.dropdown:hover span::after {
    transform: scaleX(1);
	
    /* Show the underline on hover */
}

.dropdown:hover {
    color: #F37D73;
    text-decoration: none;
    cursor: pointer;
}

.dropdown:hover .arrownegra {
    display: none;
}

.dropdown:hover .arrowrosa{
    display: flex;
}

.dropdown:hover::after {
    content: "";
    display: block;
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 3px;
    /* Set the thickness of the underline */
    background-color: #F37D73;
    transform: scaleX(0);
    /* Initially hide the underline */
    transition: transform 0.4s ease;
    /* Add a smooth transition */
}


.dropdown-content {
    display: none;
    position: absolute;
    top: calc(100%);
    left: -55%;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 0rem;
    color: black;
    width: auto;
    transition: opacity 2s ease-in-out;
}

.dropdown:hover .dropdown-content {
    display: flex;
    flex-direction: column;
    width: fit-content;
    margin-top: -5px;
    
}



.dropdown-content a {
    color: black;
    width: 250px;
    padding: 1rem;
}


.dropdown-content a:hover {
    color: #F37D73;
    width: 250px;
    background-color: antiquewhite;

}
.appointment-button {
    position: relative;
    padding: 1rem;
    background-color: #F37D73;
    color: #fff;
    cursor: pointer;
    border-radius: 20px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Add a subtle shadow for depth */
}

.appointment-button:hover {
    transform: scale(1.1) rotate(0deg); /* Increase size and add slight rotation on hover */
    box-shadow: 0 0 20px rgba(254, 249, 249, 0.5); /* Increase shadow size on hover */
}

.appointment-button::after {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
    animation: shinyAnimation 2.5s infinite;
}

@keyframes shinyAnimation {
    to {
        left: 100%;
    }
}

.logonavbar {
    width: 100%;
    height: 100px;
}

@media screen and (max-width: 1220px) {
    .rightsidenavbar {
        display: none;
    }

    .navbar {
        justify-content: flex-start;
        align-items: center;
    }

    .logo {
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        display: flex;
       
    }

    .logo img {
        height: 90px;
        padding: 0.5rem 0rem;
        width: auto;
    }

    .logonavbar {
        width: auto;
        height: 90px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .menu-bars {
        display: flex;
        font-size: 2.5rem;
    }
}


@media screen and (max-width: 630px) {

    .navbar {
        justify-content: flex-start;
        align-items: center;
        padding: 0 20px;
        gap: 20px;
    }

    .logo {
        width: 100%;
 
        justify-content: center;
        margin: 0;
        align-items: center;
        display: flex;

    }

    .logonavbar {
        width: auto;
        height: auto;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }
}

@media screen and (max-width: 590px) {
    .logo {
        margin: 0;
        height: 100%;
        width: auto;
    }

    .logo img {
        height: auto;
    }

}
@media screen and (max-width: 485px) {
    .logo {
        margin: 0;
        height: auto;
    }

}

@media screen and (max-width: 420px) {
    .logo {
        margin: 0;
        padding: 0.3rem;
    }

}

@media screen and (max-width: 385px) {
    .navbar {
        gap: 15px;
        padding: 0 15px;
    }

    .logo {
        margin: 0;
        padding: 0;
    }

    .menu-bars {
        font-size: 1.75rem;
       }
}

@media screen and (max-width: 300px) {
    .menu-bars {
        font-size: 1.5rem;
       }
}

@media screen and (max-width: 275px) {
    .menu-bars {
        font-size: 1.3rem;
       }
       .navbar {
        gap: 12px;
        padding: 0 10px;
    }
}


</style>
